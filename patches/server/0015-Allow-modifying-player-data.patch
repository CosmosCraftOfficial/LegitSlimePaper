+                        player.getAbilities().invulnerable = abilities.getBoolean("invulnerable");
+                        player.getAbilities().mayBuild = abilities.getBoolean("mayBuild");
+                        player.getAbilities().mayfly = abilities.getBoolean("mayfly");
